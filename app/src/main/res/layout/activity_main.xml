<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    tools:context="com.erictossell.fitnesstracker.MainActivity">

    <TextView
        android:id="@+id/mealNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mealNameEditText"
        android:layout_alignBottom="@+id/mealNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Name :" />

    <EditText
        android:id="@+id/mealNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/caloriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/caloriesEditText"
        android:layout_alignBottom="@+id/caloriesEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Calories :" />

    <EditText
        android:id="@+id/caloriesEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mealNameEditText"
        android:layout_alignStart="@+id/mealNameEditText"
        android:layout_below="@+id/mealNameEditText"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/fatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fatEditText"
        android:layout_alignBottom="@+id/fatEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Fat :" />

    <EditText
        android:id="@+id/fatEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/caloriesEditText"
        android:layout_alignStart="@+id/caloriesEditText"
        android:layout_below="@+id/caloriesEditText"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/proteinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/proteinEditText"
        android:layout_alignBottom="@+id/proteinEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Protein :" />

    <EditText
        android:id="@+id/proteinEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fatEditText"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/carbohydratesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/carbohydratesEditText"
        android:layout_alignBottom="@+id/carbohydratesEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Carbohydrates : " />

    <EditText
        android:id="@+id/carbohydratesEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/proteinEditText"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/addMealButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:text="Add Meal" />

    <TextView
        android:id="@+id/servingSizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/carbohydratesEditText"
        android:layout_marginTop="18dp"
        android:text="Serving Size :" />

    <EditText
        android:id="@+id/servingSizeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carbohydratesEditText"
        android:layout_alignStart="@+id/carbohydratesEditText"
        android:layout_below="@+id/carbohydratesEditText"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>
